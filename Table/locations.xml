<?xml version='1.0' encoding='UTF-8'?>
<!--
    Document   : locations.xml
    Author     : Daniel Fernández Giménez
    Description:
        Structure for the warehouse locations table.
-->
<table>
    <column>
        <name>aisle</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>drawer</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>codewarehouse</name>
        <type>character varying(4)</type>
        <null>NO</null>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>rack</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>shelf</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>storage_type</name>
        <type>integer</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>validation_code</name>
        <type>character varying(13)</type>
    </column>
    <constraint>
        <name>locations_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_locations_warehouse</name>
        <type>FOREIGN KEY (codewarehouse) REFERENCES almacenes (codalmacen) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_locations</name>
        <type>UNIQUE (codewarehouse,storage_type,aisle,rack,shelf,drawer)</type>
    </constraint>
</table>